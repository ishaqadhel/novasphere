<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - Novasphere</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body>
  <div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3" style="width: 250px;">
      <h4 class="mb-4">Novasphere</h4>
      <ul class="nav nav-pills flex-column">
        <li class="nav-item"><a href="/app/dashboard" class="nav-link text-white"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
        <li class="nav-item"><a href="/app/material-category" class="nav-link text-white"><i class="bi bi-folder"></i> Material Categories</a></li>
        <li class="nav-item"><a href="/app/material" class="nav-link text-white"><i class="bi bi-box-seam"></i> Materials</a></li>
        <li class="nav-item"><a href="/app/project" class="nav-link text-white active"><i class="bi bi-building"></i> Projects</a></li>
        <li class="nav-item">
          <a href="/app/supplier" class="nav-link text-white">
            <i class="bi bi-shop"></i> Suppliers
          </a>
        </li>
        <li class="nav-item">
          <a href="/app/report" class="nav-link text-white">
            <i class="bi bi-graph-up"></i> Reports
          </a>
        </li>
        <li class="nav-item"><a href="/app/user" class="nav-link text-white"><i class="bi bi-people"></i> Users</a></li>
        <li class="nav-item"><a href="/app/notification" class="nav-link text-white"><i class="bi bi-bell"></i> Notifications</a></li>
      </ul>
      <hr class="text-white">
      <div class="mt-auto pt-4">
        <p class="mb-1"><small>{{ user.first_name }} {{ user.last_name }}</small></p>
        <p class="mb-1"><small class="text-muted">{{ user.email }}</small></p>
        <form action="/auth/logout" method="POST" class="mt-2"><button type="submit" class="btn btn-sm btn-outline-light w-100"><i class="bi bi-box-arrow-right"></i> Logout</button></form>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1">
      <nav class="navbar navbar-light bg-light border-bottom px-4">
        <div class="container-fluid"><h5 class="mb-0">{{ title }}</h5><span class="navbar-text">Welcome, {{ user.first_name }}!</span></div>
      </nav>

      <div class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4>Project List</h4>
          <a href="/app/project/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Project</a>
        </div>

        <!-- Search Bar -->
        <div class="card mb-3">
          <div class="card-body p-2">
            <input type="text" class="form-control border-0" placeholder="Search projects..." name="search" value="{{ searchQuery }}"
                   hx-get="/app/project" 
                   hx-target="#table-body" 
                   hx-select="#table-body" 
                   hx-swap="outerHTML"
                   hx-push-url="true" 
                   hx-trigger="keyup changed delay:500ms">
          </div>
        </div>

        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>#</th>
                    <th>Project Name</th>
                    <th>Manager</th>
                    <th>Budget</th>
                    <th>Status</th>
                    <th>Active Status</th>
                    <th>Start Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody id="table-body">
                  {{#hasProjects}}
                    {{#projects}}
                    <tr>
                      <td>{{ project_id }}</td>
                      <td>
                        <div class="fw-bold">{{ name }}</div>
                      </td>
                      <td>
                        {{#manager_name}}
                          <i class="bi bi-person-circle text-secondary me-1"></i> {{ manager_name }}
                        {{/manager_name}}
                        {{^manager_name}}<span class="text-muted">-</span>{{/manager_name}}
                      </td>
                      <td>{{ formatted_budget }}</td>
                      
                      
                      <td>
                        {{#status_name}}
                          <span class="badge {{ status_badge_class }}">{{ status_name }}</span>
                        {{/status_name}}
                        {{^status_name}}<span class="text-muted small">-</span>{{/status_name}}
                      </td>

                      <!-- Active Status -->
                      <td>
                        {{#is_active_bool}}
                          <span class="badge rounded-pill bg-success"><i class="bi bi-check-circle"></i> Active</span>
                        {{/is_active_bool}}
                        {{^is_active_bool}}
                          <span class="badge rounded-pill bg-secondary"><i class="bi bi-x-circle"></i> Inactive</span>
                        {{/is_active_bool}}
                      </td>

                      <td>{{ formatted_start }}</td>

                      <td>
                        <div class="btn-group btn-group-sm" role="group">
                          <a href="/app/project/{{ project_id }}" class="btn btn-outline-primary" title="View Dashboard">
                            <i class="bi bi-eye"></i>
                          </a>
                          <a href="/app/project/{{ project_id }}/edit" class="btn btn-outline-warning" title="Edit">
                            <i class="bi bi-pencil"></i>
                          </a>
                          <button class="btn btn-outline-danger" 
                                  hx-post="/app/project/{{ project_id }}/delete" 
                                  hx-target="#table-body" 
                                  hx-select="#table-body" 
                                  hx-swap="outerHTML"
                                  hx-confirm="Delete this project?">
                            <i class="bi bi-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                    {{/projects}}
                  {{/hasProjects}}
                  {{^hasProjects}}
                    <tr><td colspan="8" class="text-center text-muted py-4">No projects found</td></tr>
                  {{/hasProjects}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>