<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - Novasphere</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body class="overflow-x-hidden" hx-on:htmx:after-swap="checkEmptyState()">
  <div class="d-flex min-vh-100">
    
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3 d-flex flex-column flex-shrink-0 overflow-hidden" 
         style="width: 250px; height: 100vh; position: sticky; top: 0; z-index: 1000;">
      <h4 class="mb-4">Novasphere</h4>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/app/dashboard" class="nav-link text-white">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        {{#permissions.canAccessMaterialCategory}}
        <li class="nav-item">
          <a href="/app/material-category" class="nav-link text-white">
            <i class="bi bi-folder"></i> Material Categories
          </a>
        </li>
        {{/permissions.canAccessMaterialCategory}}
        {{#permissions.canAccessMaterial}}
        <li class="nav-item">
          <a href="/app/material" class="nav-link text-white">
            <i class="bi bi-box-seam"></i> Materials
          </a>
        </li>
        {{/permissions.canAccessMaterial}}
        {{#permissions.canAccessProject}}
        <li class="nav-item">
          <a href="/app/project" class="nav-link text-white active">
            <i class="bi bi-building"></i> Projects
          </a>
        </li>
        {{/permissions.canAccessProject}}
        {{#permissions.canAccessProjectTask}}
        <li class="nav-item">
          <a href="/app/project-task" class="nav-link text-white">
            <i class="bi bi-list-task"></i> Project Tasks
          </a>
        </li>
        {{/permissions.canAccessProjectTask}}
        {{#permissions.canAccessSupplier}}
        <li class="nav-item">
          <a href="/app/supplier" class="nav-link text-white">
            <i class="bi bi-shop"></i> Suppliers
          </a>
        </li>
        {{/permissions.canAccessSupplier}}
        {{#permissions.canAccessReport}}
        <li class="nav-item">
          <a href="/app/report" class="nav-link text-white">
            <i class="bi bi-graph-up"></i> Reports
          </a>
        </li>
        {{/permissions.canAccessReport}}
        {{#permissions.canAccessUser}}
        <li class="nav-item">
          <a href="/app/user" class="nav-link text-white">
            <i class="bi bi-people"></i> Users
          </a>
        </li>
        {{/permissions.canAccessUser}}
        <li class="nav-item">
          <a href="/app/notification" class="nav-link text-white">
            <i class="bi bi-bell"></i> Notifications
          </a>
        </li>
      </ul>
      <hr class="text-white">
      <div class="pt-2">
        <p class="mb-1"><small>{{ user.first_name }} {{ user.last_name }}</small></p>
        <p class="mb-1"><small class="text-muted">{{ user.email }}</small></p>
        <form action="/auth/logout" method="POST" class="mt-2">
          <button type="submit" class="btn btn-sm btn-outline-light w-100">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-grow-1" style="min-width: 0;">
      <nav class="navbar navbar-light bg-light border-bottom px-4 sticky-top">
        <div class="container-fluid">
          <div class="d-flex align-items-center">
            <a href="/app/project/{{ project.project_id }}" class="btn btn-outline-secondary btn-sm me-3"><i class="bi bi-arrow-left"></i> Back to Dashboard</a>
            <div>
              <h5 class="mb-0">{{ project.name }}</h5>
              <small class="text-muted">Material Requirements</small>
            </div>
          </div>
          <span class="navbar-text">Welcome, {{ user.first_name }}!</span>
        </div>
      </nav>

      <div class="p-4">
        <div id="alert-container"></div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4>Requirements List</h4>
          {{#permissions.canCreatePMR}}
          <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#addReqCard">
            <i class="bi bi-plus-circle"></i> Add Material
          </button>
          {{/permissions.canCreatePMR}}
        </div>

        <div class="collapse mb-4" id="addReqCard">
          <div class="card card-body bg-light border-0 shadow-sm">
            <h5 class="card-title mb-3">Add New Requirement (Default: Pending)</h5>
            
            <form hx-post="/app/project-material-requirement" 
                  hx-target="#pmr-table-body" 
                  hx-swap="afterbegin"
                  hx-on::after-request="if(event.detail.successful) { this.reset(); new bootstrap.Collapse(document.getElementById('addReqCard')).hide(); checkEmptyState(); }">
              
              <input type="hidden" name="project_id" value="{{ project.project_id }}">

              <div class="row g-3">
                <div class="col-md-4">
                  <label class="form-label small text-muted fw-bold">Material <span class="text-danger">*</span></label>
                  <select name="material_id" class="form-select" required>
                    <option value="">Select...</option>
                    {{#materials}}<option value="{{material_id}}">{{name}}</option>{{/materials}}
                  </select>
                </div>

                <div class="col-md-4">
                  <label class="form-label small text-muted fw-bold">Supplier <span class="text-danger">*</span></label>
                  <select name="supplier_id" class="form-select" required>
                    <option value="">Select...</option>
                    {{#suppliers}}<option value="{{supplier_id}}">{{name}}</option>{{/suppliers}}
                  </select>
                </div>

                <div class="col-md-2">
                  <label class="form-label small text-muted fw-bold">Qty <span class="text-danger">*</span></label>
                  <input type="number" name="quantity" class="form-control" required min="1">
                </div>

                <div class="col-md-1">
                  <label class="form-label small text-muted">Unit <span class="text-danger">*</span></label>
                  <select name="unit_id" class="form-select" required>
                    <option value="">Select...</option>
                    {{#units}}<option value="{{unit_id}}">{{name}}</option>{{/units}}
                  </select>
                </div>
              </div>

              <div class="row g-3 mt-1">
                <div class="col-md-4">
                  <label class="form-label small text-muted fw-bold">Est. Price <span class="text-danger">*</span></label>
                  <input type="number" name="price" class="form-control" required min="0" step="0.01">
                </div>

                <div class="col-md-4">
                  <label class="form-label small text-muted fw-bold">Est. Arrival <span class="text-danger">*</span></label>
                  <input type="date" name="arrived_date" class="form-control" required>
                </div>

                <div class="col-md-4 d-flex align-items-end justify-content-end gap-2">
                  <button type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#addReqCard">Cancel</button>
                  <button type="submit" class="btn btn-success px-4"><i class="bi bi-save"></i> Save</button>
                </div>
              </div>

            </form>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                  <tr>
                    <th class="ps-4">Material</th>
                    <th>Supplier</th>
                    <th>Qty / Unit</th>
                    <th>Price / Total</th>
                    <th>Est. Arrival</th>
                    <th>Delivery Info</th>
                    <th>Status</th>
                    <th class="text-end pe-4">Actions</th>
                  </tr>
                </thead>
                <tbody id="pmr-table-body">
                  {{#requirements}}
                    <!-- INLINE ROW -->
                    <tr>
                      <td class="ps-4 fw-bold">{{material_name}}</td>
                      <td class="text-muted">{{supplier_name}}</td>
                      <td>
                        <span class="fw-bold">{{quantity}}</span> <span class="small text-muted">{{unit_name}}</span>
                      </td>
                      <td>
                        <div>{{formatted_price}} <span class="text-muted small">/ {{unit_name}}</span></div>
                        <div class="fw-bold text-primary">{{formatted_total}}</div>
                      </td>
                      <td>{{formatted_arrived_date}}</td>
                      <td>
                        {{#is_delivered}}
                          <div class="small">
                            <div>Act: <strong>{{formatted_actual_date}}</strong></div>
                            <div class="text-success">Good: {{good_quantity}}</div>
                            <div class="text-danger">Bad: {{bad_quantity}}</div>
                          </div>
                        {{/is_delivered}}
                        {{^is_delivered}}<span class="text-muted small">-</span>{{/is_delivered}}
                      </td>
                      <td><span class="badge {{status_badge_class}}">{{status_name}}</span></td>
                      <td class="text-end pe-4">
                        <div class="btn-group btn-sm">
                          {{#permissions.canEditPMR}}
                          <button class="btn btn-outline-warning"
                            hx-get="/app/project-material-requirement/{{project_material_requirement_id}}/edit"
                            hx-target="closest tr"
                            hx-swap="outerHTML">
                            <i class="bi bi-pencil"></i>
                          </button>
                          {{/permissions.canEditPMR}}
                          {{#permissions.canDeletePMR}}
                          <button class="btn btn-outline-danger"
                            hx-post="/app/project-material-requirement/{{project_material_requirement_id}}/delete"
                            hx-target="closest tr"
                            hx-swap="outerHTML"
                            hx-confirm="Delete requirement?">
                            <i class="bi bi-trash"></i>
                          </button>
                          {{/permissions.canDeletePMR}}
                        </div>
                      </td>
                    </tr>
                    <!-- END INLINE ROW -->
                  {{/requirements}}
                  
                  {{^requirements}}
                    <tr id="no-data-row">
                      <td colspan="8" class="text-center text-muted py-5">
                        <i class="bi bi-clipboard-data h2 d-block mb-2"></i>
                        No requirements found for this project
                      </td>
                    </tr>
                  {{/requirements}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function checkEmptyState() {
      setTimeout(() => {
          const tbody = document.getElementById('pmr-table-body');
          if (!tbody) return;

          const dataRows = Array.from(tbody.querySelectorAll('tr')).filter(row => row.id !== 'no-data-row');
          
          const noDataRow = document.getElementById('no-data-row');

          if (dataRows.length === 0) {
            if (!noDataRow) {
              const html = `
                <tr id="no-data-row">
                  <td colspan="8" class="text-center text-muted py-5">
                    <i class="bi bi-clipboard-data h2 d-block mb-2"></i>
                    No requirements found for this project
                  </td>
                </tr>`;
              tbody.insertAdjacentHTML('beforeend', html);
            }
          } else {
            if (noDataRow) {
              noDataRow.remove();
            }
          }
      }, 100);
    }
  </script>
</body>
</html>