<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - Novasphere</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body>
  <div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3" style="width: 250px;">
      <h4 class="mb-4">Novasphere</h4>
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a href="/app/dashboard" class="nav-link text-white active">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        <li class="nav-item">
          <a href="/app/material-category" class="nav-link text-white">
            <i class="bi bi-folder"></i> Material Categories
          </a>
        </li>
        <li class="nav-item">
          <a href="/app/material" class="nav-link text-white">
            <i class="bi bi-box-seam"></i> Materials
          </a>
        </li>
        <li class="nav-item"><a href="/app/project" class="nav-link text-white"><i class="bi bi-building"></i> Projects</a></li>
        <li class="nav-item">
          <a href="/app/supplier" class="nav-link text-white">
            <i class="bi bi-shop"></i> Suppliers
          </a>
        </li>
        <li class="nav-item">
          <a href="/app/report" class="nav-link text-white">
            <i class="bi bi-graph-up"></i> Reports
          </a>
        </li>
        <li class="nav-item">
          <a href="/app/user" class="nav-link text-white">
            <i class="bi bi-people"></i> Users
          </a>
        </li>
      </ul>
      <hr class="text-white">
      <div class="mt-auto pt-4">
        <p class="mb-1"><small>{{ user.first_name }} {{ user.last_name }}</small></p>
        <p class="mb-1"><small class="text-muted">{{ user.email }}</small></p>
        <form action="/auth/logout" method="POST" class="mt-2">
          <button type="submit" class="btn btn-sm btn-outline-light w-100">
            <i class="bi bi-box-arrow-right"></i> Logout
          </button>
        </form>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1" style="min-width: 0;">
      <!-- Header -->
      <nav class="navbar navbar-light bg-light border-bottom px-4">
        <div class="container-fluid">
          <h5 class="mb-0">{{ title }}</h5>
          <span class="navbar-text">Welcome, {{ user.first_name }}!</span>
        </div>
      </nav>

      <!-- Content -->
      <div class="p-4">
        <div class="mb-4">
          <h4>Welcome to Novasphere</h4>
          <p class="text-muted">Construction Supplier Management System</p>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-4">
          
          <!-- 1. PROJECT CARD (BARU) -->
          <div class="col-md-3"> <!-- Ubah col-md-4 jadi col-md-3 agar muat 4 kartu -->
            <div class="card border-info h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-2">Total Projects</h6>
                    <h2 class="mb-0">{{ stats.projectCount }}</h2>
                  </div>
                  <div class="bg-info bg-opacity-10 p-3 rounded">
                    <i class="bi bi-building fs-1 text-info"></i>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/app/project" class="text-decoration-none small text-info fw-bold">
                    View Projects <i class="bi bi-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- 2. MATERIALS CARD -->
          <div class="col-md-3">
            <div class="card border-success h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-2">Total Materials</h6>
                    <h2 class="mb-0">{{ stats.materialCount }}</h2>
                  </div>
                  <div class="bg-success bg-opacity-10 p-3 rounded">
                    <i class="bi bi-box-seam fs-1 text-success"></i>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/app/material" class="text-decoration-none small text-success fw-bold">
                    View Materials <i class="bi bi-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- 3. SUPPLIERS CARD -->
          <div class="col-md-3">
            <div class="card border-warning h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-2">Total Suppliers</h6>
                    <h2 class="mb-0">{{ stats.supplierCount }}</h2>
                  </div>
                  <div class="bg-warning bg-opacity-10 p-3 rounded">
                    <i class="bi bi-shop fs-1 text-warning"></i>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/app/supplier" class="text-decoration-none small text-warning fw-bold">
                    View Suppliers <i class="bi bi-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- 4. USERS CARD -->
          <div class="col-md-3">
            <div class="card border-primary h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="text-muted mb-2">Total Users</h6>
                    <h2 class="mb-0">{{ stats.userCount }}</h2>
                  </div>
                  <div class="bg-primary bg-opacity-10 p-3 rounded">
                    <i class="bi bi-people fs-1 text-primary"></i>
                  </div>
                </div>
                <div class="mt-3">
                  <a href="/app/user" class="text-decoration-none small text-primary fw-bold">
                    View Users <i class="bi bi-arrow-right"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>

        </div>

        <!-- Quick Actions -->
        <div class="mt-5">
          <h5 class="mb-3">Quick Actions</h5>
          <div class="row g-3">
            <div class="col-md-3">
              <a href="/app/project/create" class="btn btn-outline-info w-100">
                <i class="bi bi-building-add"></i> Add Project
              </a>
            </div>
            <div class="col-md-3">
              <a href="/app/material/create" class="btn btn-outline-success w-100">
                <i class="bi bi-plus-circle"></i> Add Material
              </a>
            </div>
            <div class="col-md-3">
              <a href="/app/supplier/create" class="btn btn-outline-warning w-100"> <!-- Asumsi ada route create supplier -->
                 <i class="bi bi-shop-window"></i> Add Supplier
              </a>
            </div>
            <div class="col-md-3">
              <a href="/app/user/create" class="btn btn-outline-primary w-100">
                <i class="bi bi-person-plus"></i> Add User
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>