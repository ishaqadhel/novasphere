<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} - Novasphere</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body>
  <div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <div class="bg-dark text-white p-3 flex-shrink-0" style="width: 250px;">
      <h4 class="mb-4">Novasphere</h4>
            <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a href="/app/dashboard" class="nav-link text-white">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        {{#permissions.canAccessMaterialCategory}}
        <li class="nav-item">
          <a href="/app/material-category" class="nav-link text-white">
            <i class="bi bi-folder"></i> Material Categories
          </a>
        </li>
        {{/permissions.canAccessMaterialCategory}}
        {{#permissions.canAccessMaterial}}
        <li class="nav-item">
          <a href="/app/material" class="nav-link text-white">
            <i class="bi bi-box-seam"></i> Materials
          </a>
        </li>
        {{/permissions.canAccessMaterial}}
        {{#permissions.canAccessProject}}
        <li class="nav-item">
          <a href="/app/project" class="nav-link text-white">
            <i class="bi bi-building"></i> Projects
          </a>
        </li>
        {{/permissions.canAccessProject}}
        {{#permissions.canAccessProjectTask}}
        <li class="nav-item">
          <a href="/app/project-task" class="nav-link text-white">
            <i class="bi bi-list-task"></i> Project Tasks
          </a>
        </li>
        {{/permissions.canAccessProjectTask}}
        {{#permissions.canAccessSupplier}}
        <li class="nav-item">
          <a href="/app/supplier" class="nav-link text-white">
            <i class="bi bi-shop"></i> Suppliers
          </a>
        </li>
        {{/permissions.canAccessSupplier}}
        {{#permissions.canAccessReport}}
        <li class="nav-item">
          <a href="/app/report" class="nav-link text-white">
            <i class="bi bi-graph-up"></i> Reports
          </a>
        </li>
        {{/permissions.canAccessReport}}
        {{#permissions.canAccessUser}}
        <li class="nav-item">
          <a href="/app/user" class="nav-link text-white">
            <i class="bi bi-people"></i> Users
          </a>
        </li>
        {{/permissions.canAccessUser}}
        <li class="nav-item">
          <a href="/app/notification" class="nav-link text-white active">
            <i class="bi bi-bell"></i> Notifications
          </a>
        </li>
      </ul>
      <hr class="text-white">
      <div class="mt-auto pt-4">
        <p class="mb-1"><small>{{ user.first_name }} {{ user.last_name }}</small></p>
        <p class="mb-1"><small class="text-muted">{{ user.email }}</small></p>
        <form action="/auth/logout" method="POST" class="mt-2"><button type="submit" class="btn btn-sm btn-outline-light w-100"><i class="bi bi-box-arrow-right"></i> Logout</button></form>
      </div>
    </div>

    <!-- Content -->
    <div class="flex-grow-1" style="min-width: 0;">
      <nav class="navbar navbar-light bg-light border-bottom px-4">
        <div class="container-fluid"><h5 class="mb-0">{{ title }}</h5><span class="navbar-text">Welcome, {{ user.first_name }}!</span></div>
      </nav>

      <div class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4>Your Notifications</h4>
          {{#unreadCount}}
            <span class="badge bg-primary px-3 py-2">{{unreadCount}} Unread</span>
          {{/unreadCount}}
        </div>

        <!-- Table List -->
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0" id="notification-table">
                <thead class="bg-light">
                  <tr>
                    <th class="ps-4" style="width: 50px;">Type</th>
                    <th style="width: 250px;">Title</th>
                    <th>Message</th>
                    <th style="width: 150px;">Time</th>
                    <th style="width: 100px;">Status</th>
                    <th class="text-end pe-4" style="width: 150px;">Actions</th>
                  </tr>
                </thead>

                <tbody id="notification-table-body" hx-on:htmx:after-swap="checkEmptyState()">
                  {{#notifications}}
                    <tr class="{{row_class}}" id="notification-row-{{notification_id}}">
                      <td class="ps-4">
                        <i class="bi {{type_icon}} {{type_color}}" style="font-size: 1.5rem;"></i>
                      </td>
                      <td>
                        <span class="fw-bold">{{title}}</span>
                      </td>
                      <td>
                        <span class="text-muted small">{{message}}</span>
                      </td>
                      <td>
                        <span class="small text-muted">{{time_ago}}</span>
                      </td>
                      <td>
                        <span class="badge {{badge_class}}">{{read_badge_text}}</span>
                      </td>
                      <td class="text-end pe-4">
                        <div class="btn-group btn-group-sm">
                          {{^is_read}}
                            <button class="btn btn-outline-primary"
                              hx-post="/app/notification/{{notification_id}}/mark-read"
                              hx-target="closest tr"
                              hx-swap="outerHTML"
                              title="Mark as read">
                              <i class="bi bi-check2"></i>
                            </button>
                          {{/is_read}}

                          <button class="btn btn-outline-danger"
                            hx-post="/app/notification/{{notification_id}}/delete"
                            hx-target="closest tr"
                            hx-swap="outerHTML"
                            hx-confirm="Delete this notification?">
                            <i class="bi bi-trash"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                  {{/notifications}}

                  {{^hasNotifications}}
                    <tr id="no-data-row">
                      <td colspan="6" class="text-center text-muted py-5">
                        <i class="bi bi-bell-slash h2 d-block mb-2"></i>
                        No notifications yet
                      </td>
                    </tr>
                  {{/hasNotifications}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function checkEmptyState() {
      const tbody = document.getElementById('notification-table-body');
      const dataRows = tbody.querySelectorAll('tr:not(#no-data-row)');
      const noDataRow = document.getElementById('no-data-row');

      if (dataRows.length === 0) {
        if (!noDataRow) {
          const html = `
            <tr id="no-data-row">
              <td colspan="6" class="text-center text-muted py-5">
                <i class="bi bi-bell-slash h2 d-block mb-2"></i>
                No notifications yet
              </td>
            </tr>`;
          tbody.innerHTML = html;
        }
      } else {
        if (noDataRow) {
          noDataRow.remove();
        }
      }
    }
  </script>
</body>
</html>
