@startuml
left to right direction
skinparam actorStyle awesome
skinparam usecase {
  BackgroundColor #F8F9FA
  BorderColor #555
  ArrowColor #555
}
skinparam usecase<<Advanced Feature>> {
  BackgroundColor #D5F5E3
  BorderColor #1D8348
}

actor Administrator as Admin
actor "Project Manager" as PM
actor Supervisor as Sup
actor "Smart Report Service" as AI

rectangle "Construction Supplier Management System" {
  
  package "User Management" {
    usecase "Create Employee Account" as UC1
    usecase "Modify Employee Account" as UC2
    usecase "Delete Employee Account" as UC3
    usecase "Assign Roles & Permissions" as UC4
  }

  package "Supplier Management" {
    usecase "Add Supplier" as UC5
    usecase "Modify Supplier Info" as UC6
    usecase "Delete Supplier" as UC7
  }

  package "Project Management" {
    usecase "Create Project" as UC8
    usecase "Manage & Track Project" as UC9
    usecase "Assign Resources & Tasks" as UC10
  }

  package "Material Management" {
    usecase "Manage Material Requirements for Project" as UC11
    usecase "Track Ordering & Delivery" as UC12
    usecase "Verify Material Quality" as UC13
    usecase "Mark Non-compliant Materials" as UC14
  }

  package "Supplier Rating" {
    usecase "Rate Suppliers" as UC15
    usecase "Review Supplier Performance History" as UC16
    usecase "Generate Advanced Supplier Performance Analytics" as UC17 <<Advanced Feature>>
    usecase "Benchmark Supplier Performance" as UC18 <<Advanced Feature>>
  }

  package "Reporting and Analytics" {
    usecase "Generate Basic Reports" as UC19
    usecase "Generate AI-driven Predictive Delay Alerts" as UC20 <<Advanced Feature>>
    usecase "Generate In-depth Performance Analytics" as UC21 <<Advanced Feature>>
  }
}

' === Associations ===
' Administrator
Admin --> UC1
Admin --> UC2
Admin --> UC3
Admin --> UC4
Admin --> UC5
Admin --> UC6
Admin --> UC7

' Project Manager
PM --> UC8
PM --> UC9
PM --> UC10
PM --> UC15
PM --> UC16
PM --> UC18
PM --> UC19

' Supervisor
Sup --> UC11
Sup --> UC12
Sup --> UC13
Sup --> UC14
Sup --> UC15
Sup --> UC16
Sup --> UC19

' Smart Report Service
AI --> UC17
AI --> UC20
AI --> UC21

@enduml