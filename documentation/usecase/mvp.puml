@startuml
left to right direction
skinparam actorStyle awesome
skinparam usecase {
  BackgroundColor #F8F9FA
  BorderColor #555
  ArrowColor #555
}

actor Administrator as Admin
actor "Project Manager" as PM
actor Supervisor as Sup

rectangle "Construction Supplier Management System" {
  
  package "User Management" {
    usecase "Create Employee Account" as UC1
    usecase "Modify Employee Account" as UC2
    usecase "Delete Employee Account" as UC3
    usecase "Assign Roles & Permissions" as UC4
  }

  package "Supplier Management" {
    usecase "Add Supplier" as UC5
    usecase "Modify Supplier Info" as UC6
    usecase "Delete Supplier" as UC7
  }

  package "Project Management" {
    usecase "Create Project" as UC8
    usecase "Manage & Track Project" as UC9
    usecase "Assign Resources & Tasks" as UC10
  }

  package "Material Management" {
    usecase "Manage Material Requirements" as UC11
    usecase "Track Ordering & Delivery" as UC12
    usecase "Verify Material Quality" as UC13
    usecase "Mark Non-compliant Materials" as UC14
  }

  package "Supplier Rating" {
    usecase "Rate Suppliers" as UC15
    usecase "Review Supplier Performance History" as UC16
  }
}

' === Associations ===
' Administrator
Admin --> UC1
Admin --> UC2
Admin --> UC3
Admin --> UC4
Admin --> UC5
Admin --> UC6
Admin --> UC7

' Project Manager
PM --> UC8
PM --> UC9
PM --> UC10
PM --> UC15
PM --> UC16

' Supervisor
Sup --> UC11
Sup --> UC12
Sup --> UC13
Sup --> UC14
Sup --> UC15
Sup --> UC16

@enduml